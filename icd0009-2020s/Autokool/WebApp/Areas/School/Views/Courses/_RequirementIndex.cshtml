@using Resource = Resources.Areas.School.Views.Courses._RequirementIndex
@model IEnumerable<BLL.App.DTO.CourseRequirement>


<table class="table">
    <thead>
        <tr>
            <th>
                @Resource.Name
            </th>
            <th>
                @Resource.Description
            </th>
            <th>
                @Resource.Price
            </th>
            <th/>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Requirement!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td/>
            <td>

                <a asp-action="RequirementEdit" class="mx-auto"  asp-route-id="@item.Id">
                    <i class="fa fa-cog mx-auto text-secondary" aria-hidden="true"></i>
                </a>
                
                
            </td>
        </tr>
}
    </tbody>
</table>
