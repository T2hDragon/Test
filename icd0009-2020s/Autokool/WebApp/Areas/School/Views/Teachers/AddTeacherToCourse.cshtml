@using Resource = Resources.Areas.School.Views.Teachers.AddTeacherToCourse
@model WebApp.Areas.School.ViewModels.Teacher.TeacherCourseAddViewModel

@{
    ViewData["Title"] = Resource.Title;
}
<div class="jumbotron shadow rounded">

    <h1>@Resource.Add @Model.Name @Resource.ToCourse</h1>

    <br>
    <br>
    <br>
    <br>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddTeacherToCourse">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ContractCourse.ContractId" value="@Model.ContractCourse.ContractId" class="form-control" hidden/>
                <div class="form-group">
                    <label asp-for="ContractCourse.CourseId" class="control-label">@Resource.Course</label>
                    <select asp-for="ContractCourse.CourseId" class ="form-control" asp-items="Model.CourseSelectList">
                        <option>--- @Resource.PleaseSelect ---</option>
                    </select>
                    <span asp-validation-for="ContractCourse.CourseId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContractCourse.HourlyPay" class="control-label">@Resource.HourlyPay</label>
                    <input asp-for="ContractCourse.HourlyPay" class="form-control" />
                    <span asp-validation-for="ContractCourse.HourlyPay" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Resource.Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Teacher" asp-route-contractId="@Model.ContractCourse.ContractId">@Resource.BackToTeacher</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
