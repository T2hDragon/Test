@using Resource = Resources.Areas.Admin.Views.Lessons.Index
@model IEnumerable<BLL.App.DTO.Lesson>

@{
    ViewData["Title"] = @Resource.Title;
}
<div class="jumbotron shadow rounded">

    <h1>@Resource.Header</h1>

    <p>
        <a asp-action="Create">@Resource.CreateNew</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Resource.LessonStart
            </th>
            <th>
                @Resource.LessonEnd
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@Resource.Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>