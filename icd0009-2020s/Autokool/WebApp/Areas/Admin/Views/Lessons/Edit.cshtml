@using Resource = Resources.Areas.Admin.Views.Lessons.Edit
@model BLL.App.DTO.Lesson

@{
    ViewData["Title"] = @Resource.Title;
}
<div class="jumbotron shadow rounded">

    <h1>@Resource.Header</h1>

    <h4>@Resource.Lesson</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <partial name="_CreateEdit" model="Model"/>
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <input type="submit" value="@Resource.Update" class="btn btn-primary"/>
                </div>
            </form>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id"/>
                    <input type="submit" value="@Resource.Delete" class="btn btn-danger"/>
                    <div></div>
                    <a asp-action="Index">@Resource.BackToList</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}