@using Resource = Resources.Areas.Admin.Views.Requirements.Create
@model BLL.App.DTO.Requirement

@{
    ViewData["Title"] = @Resource.Title;
}
<div class="jumbotron shadow rounded">

    <h1>@Resource.Header</h1>

    <br>
    <br>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <partial name="_CreateEdit" model="Model"/>

                <div class="form-group">
                    <input type="submit" value="@Resource.CreateButton" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">@Resource.BackToList</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}