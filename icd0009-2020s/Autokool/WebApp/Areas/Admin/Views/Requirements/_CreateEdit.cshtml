@using Resource = Resources.Areas.Admin.Views.Requirements._CreateEdit
@model BLL.App.DTO.Requirement

<div class="form-group">
    <label asp-for="Name" class="control-label">@Resource.Name</label>
    <input asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label">@Resource.Description</label>
    <input asp-for="Description" class="form-control"/>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label">@Resource.Price</label>
    <input asp-for="Price" class="form-control"/>
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
