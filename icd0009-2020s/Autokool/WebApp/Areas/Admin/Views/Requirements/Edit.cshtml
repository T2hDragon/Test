@using Resource = Resources.Areas.Admin.Views.Requirements.Edit
@model BLL.App.DTO.Requirement

@{
    ViewData["Title"] = @Resource.Title;
}
<div class="jumbotron shadow rounded">

    <h1>@Model.Name @Resource.Header</h1>

    <br><br>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="NameId"/>
                <input type="hidden" asp-for="DescriptionId"/>
                <partial name="_CreateEdit" model="Model"/>
                <div class="form-group">
                    <input type="submit" value="@Resource.Update" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <form asp-action="Delete" asp-route-id="@Model.Id">
            <a asp-action="Index">@Resource.BackToList</a>
            <input type="submit" value="@Resource.Delete" class="btn btn-danger float-right"/>
        </form>
        </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}